{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "*": ["./types/", "src/types/*"],
      "src/*": ["./src/*"]
    },
    "target": "esnext",
    "module": "esnext",
    "lib": ["esnext"],
    "jsx": "preserve",
    "moduleResolution": "node",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true
  },
  "include": [
    "./*.js",
    "./*.jsx",
    "./*.ts",
    "./*.tsx",
    "./**/.*.js",
    "./**/.*.jsx",
    "./**/.*.ts",
    "./**/.*.tsx",
    "./**/*.js",
    "./**/*.jsx",
    "./**/*.ts",
    "./**/*.tsx",
    "next-env.d.ts"
  ],
  "exclude": [
    ".build",
    ".cache",
    ".idea",
    ".ignore",
    ".reports",
    "3rdparty",
    "dist",
    "node_modules",
    "tsconfig.json"
  ]
}
